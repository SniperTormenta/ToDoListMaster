<Window x:Class="ToDoListMaster.test"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoListMaster"
        mc:Ignorable="d"
        Title="test" Height="900" Width="460">
    <Grid>
        <!-- Боковое меню -->
        <StackPanel x:Name="SideMenu" Width="200" Background="LightGray" HorizontalAlignment="Left">
            <StackPanel.RenderTransform>
                <TranslateTransform X="-200"/>
            </StackPanel.RenderTransform>
            <Button Content="Главная" Width="200" Height="50"/>
            <Button Content="Календарь" Width="200" Height="50"/>
            <Button Content="Настройки" Width="200" Height="50"/>
        </StackPanel>

        <!-- Основное содержимое -->
        <Grid>
            <!-- Текущий контент окна -->
        </Grid>
    </Grid>
</Window>
