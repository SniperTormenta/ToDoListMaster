<Window x:Class="ToDoListMaster.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoListMaster"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="460">
    <materialDesign:DrawerHost x:Name="MainDrawerHost" OverlayBackground="#80000000">
        <!-- Боковое меню слева -->
        <materialDesign:DrawerHost.LeftDrawerContent>
            <Grid Width="390" Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <!-- Заголовок -->
                    <RowDefinition Height="*"/>
                    <!-- Пункты меню -->
                    <RowDefinition Height="Auto"/>
                    <!-- Версия -->
                </Grid.RowDefinitions>

                <!-- Аквамариновый прямоугольник с заголовком -->
                <Border Grid.Row="0" Background="#00CED1">
                    <TextBlock Text="ToDoList Master" FontSize="20" FontWeight="Bold" Foreground="White" 
                               VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,0,0,0"/>
                </Border>

                <!-- Пункты меню -->
                <ListBox Grid.Row="1" BorderThickness="0" Background="Transparent">
                    <ListBoxItem Height="50">
                        <TextBlock Text="Избранные задачи" FontSize="16" Margin="20,0,0,0"/>
                    </ListBoxItem>
                    <ListBoxItem Height="50" Selected="ArchiveMenuItem_Selected">
                        <TextBlock Text="Архив" FontSize="16" Margin="20,0,0,0"/>
                    </ListBoxItem>
                    <ListBoxItem Height="50">
                        <TextBlock Text="Обратная связь" FontSize="16" Margin="20,0,0,0"/>
                    </ListBoxItem>
                </ListBox>

                <!-- Версия приложения -->
                <TextBlock Grid.Row="2" Text="Beta 1.0.0" FontSize="12" Foreground="#808080" 
                           HorizontalAlignment="Left" Margin="20,0,0,10"/>
            </Grid>
        </materialDesign:DrawerHost.LeftDrawerContent>

        <!-- Нижнее меню для добавления задачи -->
        <materialDesign:DrawerHost.BottomDrawerContent>
            <Grid Height="400" Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <TextBlock Grid.Row="0" Text="Добавить задачу" FontSize="20" FontWeight="Bold" 
                           Margin="20,10,0,10" HorizontalAlignment="Left"/>

                <!-- Форма для добавления задачи -->
                <StackPanel Grid.Row="1" Margin="20">
                    <TextBlock Text="Название задачи" FontSize="16" Margin="0,0,0,5"/>
                    <TextBox x:Name="TaskTitleTextBox" Width="300" Height="30" FontSize="14" Margin="0,0,0,10"/>

                    <TextBlock Text="Категория" FontSize="16" Margin="0,0,0,5"/>
                    <ComboBox x:Name="TaskCategoryComboBox" Width="300" Height="30" FontSize="14" Margin="0,0,0,10"
                              ItemsSource="{Binding Categories}" DisplayMemberPath="Name" SelectedValuePath="Id"/>

                    <TextBlock Text="Дата выполнения" FontSize="16" Margin="0,0,0,5"/>
                    <DatePicker x:Name="TaskDueDatePicker" Width="300" Height="30" FontSize="14" Margin="0,0,0,10"/>

                    <CheckBox x:Name="TaskHasReminderCheckBox" Content="Установить напоминание" FontSize="14" Margin="0,0,0,10"/>
                    <CheckBox x:Name="TaskIsRepeatableCheckBox" Content="Повторяющаяся задача" FontSize="14" Margin="0,0,0,10"/>
                </StackPanel>

                <!-- Кнопки -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <Button x:Name="SaveTaskButton" Content="Сохранить" Width="100" Height="30" 
                            Background="#4FC3F7" Foreground="White" FontSize="14" BorderThickness="0" 
                            Margin="0,0,10,0" Click="SaveTaskButton_Click"/>
                    <Button Content="Отмена" Width="100" Height="30" 
                            Background="Transparent" BorderThickness="0" FontSize="14" 
                            Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}" 
                            CommandTarget="{Binding ElementName=MainDrawerHost}"/>
                </StackPanel>
            </Grid>
        </materialDesign:DrawerHost.BottomDrawerContent>

        <!-- Основное содержимое -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Верхняя панель -->
                <RowDefinition Height="Auto"/>
                <!-- Поле поиска -->
                <RowDefinition Height="*"/>
                <!-- Основная область -->
                <RowDefinition Height="Auto"/>
                <!-- Нижняя панель -->
            </Grid.RowDefinitions>

            <!-- Верхняя панель с вкладками -->
            <Grid Grid.Row="0" Background="White" Height="100">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- ComboBox для выбора категории -->
                <ComboBox x:Name="CategoryFilterComboBox" Width="110" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16"
                          ItemsSource="{Binding Categories}" DisplayMemberPath="Name" SelectedValuePath="Id" Margin="20,20,0,0"
                          SelectionChanged="CategoryFilterComboBox_SelectionChanged"/>
            </Grid>

            <!-- Основная область для списка задач -->
            <ListBox x:Name="TaskListBox" Grid.Row="2" Background="White" BorderThickness="0" Margin="10,37,10,10" 
                     ItemsSource="{Binding TaskView}" MouseDoubleClick="TaskListBox_MouseDoubleClick">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#E0F7FA" CornerRadius="10" Margin="5" Padding="10" HorizontalAlignment="Stretch">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Orientation="Horizontal" Grid.Column="0">
                                    <TextBlock Text="{Binding Title}" FontSize="16" Margin="5"/>
                                    <TextBlock Text="{Binding DueDate, StringFormat='Due: {0:dd.MM.yyyy}'}" FontSize="14" Foreground="Gray" Margin="5"/>
                                    <TextBlock Text="{Binding Category.Name}" FontSize="14" Foreground="Blue" Margin="5"/>
                                </StackPanel>
                                <Image Grid.Column="1" Width="20" Height="20" Margin="5" Source="{Binding Notes}"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>

            <!-- Нижняя панель навигации -->
            <Grid Grid.Row="3" Background="White" Height="60">
                <Grid.Effect>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" BlurRadius="10" Opacity="0.3"/>
                </Grid.Effect>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="≡" Width="60" Height="60" Background="Transparent" BorderThickness="0" FontSize="20"
                            Click="OpenLeftDrawerButton_Click"/>
                    <!-- Кнопка 📋 не имеет обработчика, так как мы уже в MainWindow -->
                    <Button Content="📋" Width="60" Height="60" Background="Transparent" BorderThickness="0" FontSize="20"/>
                    <Button Content="📅" Width="60" Height="60" Background="Transparent" BorderThickness="0" FontSize="20" Click="OpenCalendarWindowButton_Click"/>
                    <Button Content="👤" Width="60" Height="60" Background="Transparent" BorderThickness="0" FontSize="20" Click="OpenProfileWindowButton_Click"/>
                </StackPanel>
            </Grid>

            <!-- Плавающая кнопка "+" для открытия нижнего меню -->
            <Button x:Name="OpenAddTaskDrawerButton" Content="+" Width="60" Height="60" Background="#4FC3F7" Foreground="White" FontSize="30" 
                    BorderThickness="0" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,23,21" Grid.Row="2"
                    Click="OpenAddTaskDrawerButton_Click">
                <Button.Effect>
                    <DropShadowEffect Color="Black" ShadowDepth="5" BlurRadius="10" Opacity="0.5"/>
                </Button.Effect>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="30">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </materialDesign:DrawerHost>
</Window>